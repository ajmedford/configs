[tags]
  [[flagged]]
    translated = ⚑
    fg = light red

  [[unread]]
    translated= ✉
    fg = white

  [[replied]]
    translated=  ⏎

  [[encrypted]]
    translated= ⚷

  [[inbox]]
      fg = '#fff'
      bg = '#88d'
      translated = ✉

  [[killed]]
      fg = 'g70'
      bg = 'g27'
      translated = τ # ☠
      hidden = True

  [[lists]]
      translated = ⎎

  [[notmuch::bug]]
      fg = 'light red, bold'
      bg = '#88d'
      translated = 'nm:bug'
  [[notmuch.*]]
      fg = '#fff'
      bg = '#88d'
      translation = 'notmuch::(.*)','\1'
