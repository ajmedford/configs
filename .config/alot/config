[bindings]
  #G = "call hooks.test_globals()"
  '[' = compose --template bpp
  M = compose --spawn=1
  T = search is:todo
  Y = search is:travel
  A = search is:alot
  S = search is:sent
  % = "shellescape 'killall offlineimap && /home/pazz/bin/pullmail.sh'"
  ^ = "shellescape 'killall offlineimap && rm /home/pazz.offlineimap/lock'"
  'meta left' = bprevious
  'meta right' = bnext
  'meta 1' = buffer 1
  'meta 2' = buffer 2
  'meta 3' = buffer 3
  'meta 4' = buffer 4
  'meta 5' = buffer 5
  'g g' = move first
  
  [[search]]
    #H = untag --all LA
    & = toggletags killed
    ! = toggletags flagged
    s = toggletags unread
    t = toggletags todo
    y = toggletags travel
    #enter = "select; fold NOT is:unread"
  
  [[thread]]
    #H = "call ui.current_buffer.get_selected_message().test_parser()"
    #G = "pipeto 'git am'"
    t = toggletags todo
    a = toggletags inbox
    y = toggletags travel
    v = verify
    ' ' = fold;move next;unfold
    $ = call hooks.github(ui)
    U = call hooks.unsubscribe()

